// Schema Datailer - Plataforma Multi-Lava-Car

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model LavaCar {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  nome               String
  email              String
  senhaHash          String?
  telefone           String?
  endereco           String
  cidade             String
  estado             String
  cep                String?
  horariosFuncionamento String @default("{}")
  intervaloSlots     Int      @default(30)
  taxaCancelamento   Float    @default(0)
  ativo              Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  servicos           Servico[]
  agendamentos       Agendamento[]
}

model Servico {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  lavaCarId  String   @db.ObjectId
  nome       String
  preco      Float
  duracao    Int
  descricao  String?
  ativo      Boolean  @default(true)

  lavaCar    LavaCar        @relation(fields: [lavaCarId], references: [id], onDelete: Cascade)
  agendamentos Agendamento[]
}

model Cliente {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  senhaHash  String
  nome       String
  telefone   String
  cidade     String?
  estado     String?
  ativo      Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  agendamentos Agendamento[]
}

model Agendamento {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  lavaCarId     String   @db.ObjectId
  clienteId     String   @db.ObjectId
  servicoId     String   @db.ObjectId
  data          String
  horaInicio    String
  horaFim       String
  status        String   @default("confirmado")
  valor         Float
  observacao    String?
  emailConfirmacaoEnviado Boolean @default(false)
  emailCancelamentoEnviado Boolean @default(false)
  canceladoEm   DateTime?
  motivoCancelamento String?
  taxaCobrada   Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  lavaCar       LavaCar   @relation(fields: [lavaCarId], references: [id], onDelete: Cascade)
  cliente       Cliente   @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  servico       Servico   @relation(fields: [servicoId], references: [id], onDelete: Cascade)
}
